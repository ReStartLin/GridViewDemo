<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="restart.com.gridviewdemo.MainActivity">

    <Button
        android:id="@+id/gridviewone"
        android:layout_width="257dp"
        android:layout_height="wrap_content"

        android:layout_marginTop="52dp"
        android:text="GridView文字"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.509"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/gridviewtow"
        android:layout_width="257dp"
        android:layout_height="wrap_content"

        android:layout_marginTop="44dp"
        android:text="GridView图文"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.509"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/gridviewone"
    />

    <Button
        android:id="@+id/gridviewthree"
        android:layout_width="257dp"
        android:layout_height="wrap_content"

        android:layout_marginTop="48dp"
        android:text="网络请求"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/gridviewtow" />
</android.support.constraint.ConstraintLayout>
